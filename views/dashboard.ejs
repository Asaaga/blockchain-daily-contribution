<%- include('includes/header.ejs') %>
<div class="container">
  <div class="row">
    <div class="col">
      <p class="text-white mt-5 mb-5"><b>Dashboard</b></p>
    </div>
  </div>
  <!-- row -->
  <div class="row tm-content-row">
    <div class="col-12 tm-block-col">
      <div class="">
        <h2 class="tm-block-title">Add new Transaction</h2>
        <form
          id="paymentForm"
          method="post"
          class="tm-edit-product-form">
          <div class="row">
            <div class="col-md-3">
              <div class="form-group mb-3">
                <label for="name">Enter Your Email </label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  class="form-control validate"
                  placeholder="Enter your Email"
                  required
                  style="border: 1px solid white; border-radius: 10px" />
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group mb-3">
                <label for="name">Enter Your Full Name </label>
                <input
                  id="fullName"
                  name="name"
                  type="name"
                  placeholder="Enter Full Name"
                  class="form-control validate"
                  required
                  style="border: 1px solid white; border-radius: 10px" />
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group mb-3">
                <label for="name">Enter Mount</label>
                <input
                  id="amount"
                  name="amount"
                  type="amount"
                  class="form-control validate"
                  placeholder="Enter the Amount"
                  required
                  style="border: 1px solid white; border-radius: 10px" />
              </div>
            </div>
            <div class="col-md-3 d-flex align-items-center">
              <!-- <div class="form-group"> -->
              <button
                type="submit"
                onclick="payWithPaystack(event)"
                class="btn btn-success mt-2">
                Pay Now
              </button>
              <!-- </div> -->
            </div>
          </div>
        </form>
      </div>

      <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
        <h2 class="tm-block-title">You Previous Transactions</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Time Stamp</th>
              <th scope="col">Previous Hash</th>
              <th scope="col">Hash</th>
              <th scope="col">Amount</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script src="https://js.paystack.co/v1/inline.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
  let paymentForm = document.getElementById('paymentForm');
  const amount = document.getElementById('amount').value;
  const email = document.getElementById('email').value;
  const fullName = document.querySelector('#fullName');

  paymentForm.addEventListener('submit', payWithPaystack, false);

  function payWithPaystack(e) {
    e.preventDefault();

    let handler = PaystackPop.setup({
      key: 'pk_test_315b6c38f362d496049ea29bf6f2885aae64c40d', // Replace with your public key
      email: document.getElementById('email').value,
      amount: document.getElementById('amount').value * 100,
      fullName: document.querySelector('#fullName').value,
      ref: '' + Math.floor(Math.random() * 1000000000 + 1), // generates a pseudo-unique reference. Please replace with a reference you generated. Or remove the line entirely so our API will generate one for you
      // label: "Optional string that replaces customer email"
      metadata: {
        full_name: '' + fullName.value,
      },
      onClose: function () {
        alert('Window closed.');
      },
      callback: function (response) {
        let reference = response.reference;
        //verify payment
        $.ajax({
          type: 'GET',
          url: `/verify-payment/reference=${reference}`,
          data: {
            reference,
          },
          success: function (response) {
            console.log(response);
          },
        });
      },
    });
    handler.openIframe();
  }
</script>
<%- include('includes/footer.ejs') %>
